{
  "node_pools": [
    {
      "name": "talos-controlplane-amd64",
      "instance": "cx11",
      "size": 1,
      "image": "talos-v1.7.2-amd64-gvisor-wasmedge",
      "cloud_init_path": "data/controlplane.yaml",
      "ssh_key_paths": [
        "~/.ssh/id_rsa.pub"
      ],
      "tags": {
        "k8s_control_plane": "true",
        "k8s": "controlplane",
        "role": "controlplane"
      }
    },
    {
      "name": "talos-worker-arm64",
      "instance": "cax11",
      "size": 3,
      "image": "talos-v1.7.2-arm64-gvisor-wasmedge",
      "cloud_init_path": "data/worker.yaml",
      "ssh_key_paths": [
        "~/.ssh/id_rsa.pub"
      ],
      "tags": {
        "k8s_worker": "true",
        "k8s": "worker",
        "role": "worker"
      }
    }
  ]
}
